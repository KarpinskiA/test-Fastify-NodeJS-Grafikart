<%- include('./shared/header.ejs', {title: 'Se connecter'}) %>

<div class="container">

  <% if (locals.error) { %>
  <div class="alert alert-danger mt-2">
    <%= error %>
  </div>
  <% } %>

  <div class="card mt-2">
    <div class="card-body">
      <form action="" method="post">
        <div class="form-group">
          <label for="username">Nom de l'utilisateur</label>
          <input class="form-control" type="text" id="username" name="username" value="<%= locals.username ?? '' %>">
        </div>
        <div class="form-group">
          <label for="password">Mot de passe</label>
          <input class="form-control" type="password" id="password" name="password">
        </div>
        <button class="mt-3 btn btn-primary">Se connecter</button>
      </form>
    </div>
  </div>
</div>

<%- include('./shared/footer.ejs') %>